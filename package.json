{
    "name": "screen-scaler",
    "version": "2.0.0",
    "description": "One-size-fit-all web design: Screen-size agnostic development environment.",
    "repository": {
        "type": "git",
        "url": "git://github.com/garronej/screen-scaler.git"
    },
    "scripts": {
        "build": "tsc",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "yarn _format --write",
        "format:check": "yarn _format --list-different",
        "link-in-app": "yarn build && ts-node --skipProject scripts/link-in-app.ts",
        "start-test-app": "yarn build && ts-node --skipProject scripts/link-in-test-app.ts && cd test-app && rm -rf node_modules/.cache && yarn start"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./*": "./dist/*.js"
    },
    "lint-staged": {
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/garronej",
    "license": "MIT",
    "files": [
        "src/",
        "dist/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [],
    "homepage": "https://github.com/garronej/screen-scaler",
    "devDependencies": {
        "@types/node": "^20.2.1",
        "@types/react": "^18.2.6",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^4.3.8",
        "lint-staged": "^11.1.1",
        "prettier": "^2.8.8",
        "react": "^18.2.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4",
        "react-dom": "^18.2.0",
        "@types/react-dom": "^18.2.7",
        "evt": "^2.5.9"
    },
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "evt": "^2.5.9"
    },
    "dependencies": {
        "tsafe": "^1.8.10"
    }
}
